FROM python:3.11-slim

# 2. Устанавливаем рабочую директорию внутри контейнера
WORKDIR /app

# 3. Копируем файл с зависимостями и устанавливаем их
# Это кэшируется и ускоряет последующие сборки, если зависимости не менялись
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 4. Копируем весь код приложения в контейнер
COPY . .

# 5. Указываем команду для запуска приложения через Gunicorn
# Gunicorn - это production-ready WSGI сервер
# 0.0.0.0 - чтобы приложение было доступно извне контейнера
CMD ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]